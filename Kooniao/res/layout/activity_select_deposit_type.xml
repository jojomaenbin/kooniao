<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/baseLinearLayoutMMVerticalStyle"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white" >

        <ImageView
            android:id="@id/iv_go_back"
            style="@style/baseLayoutWWStyle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/titlebar_backward_kooniao_selector" />

        <TextView
            style="@style/baseLayoutWMStyle"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/way_book"
            android:textColor="@color/v020202"
            android:textSize="18sp" />
    </RelativeLayout>

    <include layout="@layout/divider_line_full" />

    <LinearLayout
        android:id="@id/ll_reservation"
        style="@style/baseLinearLayoutMWVerticalStyle"
        android:layout_margin="10dp"
        android:background="@drawable/book_item_selector"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="20dp" >

        <TextView
            android:id="@id/tv_reservation"
            style="@style/baseLayoutWWStyle"
            android:layout_gravity="center_horizontal"
            android:text="@string/reservation"
            android:textColor="@color/book_text_selector"
            android:textSize="14sp" />

        <TextView
            android:id="@id/tv_reservation_money"
            style="@style/baseLayoutWWStyle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/book_text_selector"
            android:textSize="12sp" />

        <TextView
            android:id="@id/tv_reservation_tips"
            style="@style/baseLayoutWWStyle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/reservation_tips"
            android:textColor="@color/book_text_selector"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_full"
        style="@style/baseLinearLayoutMWVerticalStyle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/book_item_selector"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="20dp" >

        <TextView
            android:id="@id/tv_full"
            style="@style/baseLayoutWWStyle"
            android:layout_gravity="center_horizontal"
            android:text="@string/full_booking"
            android:textColor="@color/book_text_selector"
            android:textSize="14sp" />

        <TextView
            android:id="@id/tv_full_money"
            style="@style/baseLayoutWWStyle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/book_text_selector"
            android:textSize="12sp" />

        <TextView
            android:id="@id/tv_full_tips"
            style="@style/baseLayoutWWStyle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/full_booking_tips"
            android:textColor="@color/book_text_selector"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>