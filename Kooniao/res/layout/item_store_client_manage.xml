<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/baseLinearLayoutMWVerticalStyle"
    android:gravity="center_vertical" >

    <TextView
        android:id="@id/tv_client_selected_category"
        style="@style/baseLayoutMMStyle"
        android:background="@color/main_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textColor="@color/v020202" />

    <LinearLayout
        style="@style/baseLinearLayoutMMHorizontalStyle"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/tv_client_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="@color/v020202"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:paddingRight="35dp" >

            <ImageView
                android:id="@id/iv_client_phone_call"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:src="@drawable/phone_call_blue_selector" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>