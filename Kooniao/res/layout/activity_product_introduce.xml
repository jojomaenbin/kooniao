<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/baseLinearLayoutMMVerticalStyle"
              android:background="@color/main_bg">

    <RelativeLayout
            android:id="@id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@color/white">

        <ImageView
                android:id="@id/iv_go_back"
                style="@style/baseLayoutWWStyle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/titlebar_backward_kooniao_selector"/>

        <TextView
                android:id="@id/title"
                style="@style/baseLayoutWMStyle"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/product_introduce"
                android:textColor="@color/v020202"
                android:textSize="18sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tjml"
                android:layout_marginRight="10dp"
                android:text="@string/confirm"
                android:textColor="@color/v16b8eb"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:background="@color/divider_line_bg"/>


   <EditText style="@style/baseLayoutMMStyle"
       android:padding="10dp"
       android:id="@+id/ed_product_introduce"
       android:gravity="top"
       android:background="@null"
       android:hint="@string/product_introduce"
       android:textColor="@color/v323232"
       />
</LinearLayout>