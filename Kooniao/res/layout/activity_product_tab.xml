<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/baseLinearLayoutMMVerticalStyle"
              android:background="@color/main_bg">

    <RelativeLayout
            android:id="@id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@color/white">

        <ImageView
                android:id="@id/iv_go_back"
                style="@style/baseLayoutWWStyle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/titlebar_backward_kooniao_selector"/>

        <TextView
                android:id="@id/title"
                style="@style/baseLayoutWMStyle"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/product_tabs"
                android:textColor="@color/v020202"
                android:textSize="18sp"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:background="@color/divider_line_bg"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/divider_line"
            android:background="@color/white"
            android:padding="15dp"
            android:layout_height="wrap_content">

        <EditText
                style="@style/baseLayoutMMStyle"
                android:background="@null"
                android:id="@+id/srbq"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="@string/product_input_tabs"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="@color/v909090"
                android:textColorHint="@color/vd0d0d0"
                android:textSize="16sp"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tjbq"
                android:background="@drawable/add_tab"/>

    </LinearLayout>

    <com.kooniao.travel.customwidget.FlowLayout
            android:id="@+id/bqzs"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="match_parent"></com.kooniao.travel.customwidget.FlowLayout>
</LinearLayout>