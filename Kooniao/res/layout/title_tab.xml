<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/baseLinearLayoutMWHorizontalStyle"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    tools:ignore="DisableBaselineAlignment" >

    <LinearLayout
        android:id="@id/ll_title_bar_tab_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@id/tv_title_bar_tab_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="12dp"
            android:text="@string/line"
            android:textColor="@drawable/title_bar_tab_text_selector"
            android:textSize="15sp" />

        <include
            android:id="@id/divider_line_one"
            layout="@layout/divider_line_blue_full" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_title_bar_tab_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@id/tv_title_bar_tab_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="12dp"
            android:text="@string/detail"
            android:textColor="@drawable/title_bar_tab_text_selector"
            android:textSize="15sp" />

        <include
            android:id="@id/divider_line_two"
            layout="@layout/divider_line_blue_full"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_title_bar_tab_three"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@id/tv_title_bar_tab_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="12dp"
            android:text="@string/product_comment"
            android:textColor="@drawable/title_bar_tab_text_selector"
            android:textSize="15sp" />

        <include
            android:id="@id/divider_line_three"
            layout="@layout/divider_line_blue_full"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>