<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/topBarStyle" >

    <TextView
        android:id="@id/tv_top_bar_city"
        style="@style/textViewTitleBarStyle"
        android:layout_weight="1"
        android:gravity="left"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@id/iv_top_bar_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/titlebar_search_selector"
            android:contentDescription="@null" />

        <ImageView
            android:id="@id/iv_top_bar_more"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/titlebar_more_selector"
            android:contentDescription="@null" />
    </LinearLayout>

</LinearLayout>