<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/baseLinearLayoutMWVerticalStyle"
    android:background="@color/main_bg"
    android:paddingBottom="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <include layout="@layout/divider_line_full" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:padding="10dp" >

            <ImageView
                android:id="@id/iv_product_cover_img"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:background="@color/v31a9b6"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/list_default_cover" />

            <TextView
                android:id="@id/tv_product_name"
                style="@style/baseLayoutWWStyle"
                android:layout_alignTop="@id/iv_product_cover_img"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iv_product_cover_img"
                android:layout_toRightOf="@id/iv_product_cover_img"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/v020202"
                android:textSize="15sp" />

            <TextView
                android:id="@id/tv_product_price_range"
                style="@style/baseLayoutWWStyle"
                android:layout_alignBottom="@id/iv_product_cover_img"
                android:layout_alignLeft="@id/tv_product_name"
                android:layout_alignStart="@id/tv_product_name"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/vdd3a2c"
                android:textSize="13sp" />

            <TextView
                android:id="@id/tv_product_info"
                style="@style/baseLayoutWWStyle"
                android:layout_above="@id/tv_product_price_range"
                android:layout_alignLeft="@id/tv_product_price_range"
                android:layout_alignStart="@id/tv_product_price_range"
                android:layout_centerVertical="true"
                android:textColor="@color/v909090"
                android:textSize="13sp" />
        </RelativeLayout>

        <include layout="@layout/divider_line_margin_left_right_10" />

        <LinearLayout
            style="@style/baseLinearLayoutMMHorizontalStyle"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@id/tv_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/item_package_selector"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/share"
                android:textColor="@color/v707070"
                android:textSize="12sp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@id/tv_recommend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/item_package_selector"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/recommend"
                android:textColor="@color/v707070"
                android:textSize="12sp" />

            <TextView
                android:id="@id/tv_distribute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/item_package_selector"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/distribute"
                android:textColor="@color/v707070"
                android:textSize="12sp" />

            <TextView
                android:id="@id/tv_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/item_package_selector"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/edit"
                android:textColor="@color/v707070"
                android:textSize="12sp" />

            <TextView
                android:id="@id/tv_product_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/item_package_selector"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/sloadout"
                android:textColor="@color/v707070"
                android:textSize="12sp" />

            <TextView
                android:id="@id/tv_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/item_package_selector"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/delete"
                android:textColor="@color/v707070"
                android:textSize="12sp"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/divider_line_full" />

</LinearLayout>