<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/baseLayoutMMStyle" >

    <com.kooniao.travel.customwidget.ZoomImageView
        android:id="@id/ziv_preview_image"
        style="@style/baseLayoutMMStyle" />

    <com.kooniao.travel.customwidget.RoundClipView
        android:id="@id/cv_round"
        style="@style/baseLayoutMMStyle" />

    <com.kooniao.travel.customwidget.RectClipView
        android:id="@id/cv_rect"
        style="@style/baseLayoutMMStyle"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@color/translucence_black_dark" >

        <ImageView
            android:id="@id/iv_go_back"
            style="@style/baseLayoutWWStyle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/titlebar_backward_kooniao_selector" />

        <TextView
            style="@style/baseLayoutWMStyle"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/move_and_scale"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@id/tv_accept"
            style="@style/baseLayoutWMStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/accept"
            android:textColor="@color/v16b8eb"
            android:textSize="18sp" />
    </RelativeLayout>

</FrameLayout>