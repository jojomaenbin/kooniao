<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:background="@color/white" >

    <ImageView
        android:id="@id/iv_go_back"
        style="@style/baseLayoutWWStyle"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/titlebar_backward_kooniao_selector" />

    <TextView
        style="@style/baseLayoutWMStyle"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="@string/travel_detail"
        android:textColor="@color/v020202"
        android:textSize="18sp" />

    <LinearLayout
        style="@style/baseLayoutWWStyle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@id/iv_travel_plan_team"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/titlebar_group_selector"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:visibility="invisible" />

        <ImageView
            android:id="@id/iv_navigation"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/titlebar_navigation_selector"
            android:contentDescription="@null"
            android:scaleType="fitXY" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_line_bg" />

</RelativeLayout>