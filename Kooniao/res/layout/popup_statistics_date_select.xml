<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/baseLayoutMMStyle"
    android:background="@color/translucence_black_dark"
    android:scrollbars="none" >

    <LinearLayout
        style="@style/baseLinearLayoutMWVerticalStyle"
        android:background="@color/white" >
        
        <include layout="@layout/divider_line_full" />

        <TextView
            android:id="@id/tv_date_today"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:gravity="left"
            android:padding="10dp"
            android:text="@string/today"
            android:textColor="@color/v020202"
            android:textSize="15sp" />

        <include layout="@layout/divider_line_full" />

        <TextView
            android:id="@id/tv_date_seven"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:gravity="left"
            android:padding="10dp"
            android:text="@string/seven_day"
            android:textColor="@color/v020202"
            android:textSize="15sp" />

        <include layout="@layout/divider_line_full" />

        <TextView
            android:id="@id/tv_date_thirty"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:gravity="left"
            android:padding="10dp"
            android:text="@string/thirty_day"
            android:textColor="@color/v020202"
            android:textSize="15sp" />

        <include layout="@layout/divider_line_full" />
        
        <TextView
            android:id="@id/tv_date_all"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:gravity="left"
            android:padding="10dp"
            android:text="@string/all"
            android:textColor="@color/v020202"
            android:textSize="15sp" />

        <include layout="@layout/divider_line_full" />
    </LinearLayout>

</ScrollView>